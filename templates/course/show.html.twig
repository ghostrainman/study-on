{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <a href="{{ path('app_course_index') }}">← Назад к списку курсов</a>
    <p>{{ course.description }}</p>

    <h2>Список уроков</h2>
    {% if lessons is empty %}
        <p>В этом курсе пока нет уроков.</p>
    {% else %}
        <ul>
            {% for lesson in lessons %}
                <li>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                        {{ lesson.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        <ul>
            <li>
                <a href="{{ path('app_lesson_new', {'courseId': course.id}) }}">Добавить урок</a>
            </li>
        </ul>
    {% endif %}
    <br>
    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
